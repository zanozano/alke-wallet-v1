<div class="profile-section animate__animated animate__fadeInUp">

    {{> navprofile}}

    <div class="body-container d-flex flex-column flex-lg-row gap-5">


        <div class="accounts">
            <div class="d-flex justify-content-between mb-3">
                <h2>Accounts</h2>
                <span class="icon-btn">
                    <i class="fa-regular fa-credit-card"></i>
                </span>
            </div>


            <div class="d-flex flex-column flex-sm-row flex-lg-column gap-3 justify-content-center align-items-center">

                <div class="card-container">
                    <div>
                        <h4>
                            Credit Account
                        </h4>
                        {{#if showIcon}}
                        <span class="icon-btn">
                            <i class="fa-regular fa-eye"></i>
                        </span>
                        {{else}}
                        <span class="icon-btn">
                            <i class="fa-regular fa-eye-slash"></i>
                        </span>
                        {{/if}}
                    </div>
                    <div>
                        <div>
                            {{ user.credit_balance}}
                        </div>
                    </div>
                    <div>
                        <hr>
                        <p>{{user.credit_card_number}}</p>
                    </div>
                </div>
                <div class="card-container">
                    <div>
                        <h4>
                            Saving Account
                        </h4>
                        {{#if showIcon}}
                        <span class="icon-btn">
                            <i class="fa-regular fa-eye"></i>
                        </span>
                        {{else}}
                        <span class="icon-btn">
                            <i class="fa-regular fa-eye-slash"></i>
                        </span>
                        {{/if}}
                    </div>
                    <div>
                        {{ user.savings_balance}}
                    </div>
                    <div>
                        <hr>
                        <p>{{ user.savings_card_number}}</p>
                    </div>
                </div>
            </div>

        </div>

        <div class="table-transaction">
            <div>
                <div class="d-flex justify-content-between mb-3">
                    <h2>Historical Transactions</h2>
                    {{#if showIcon}}
                    <span class="icon-btn" id="toggle-transaction-btn">
                        <i class="fa-regular fa-eye-slash"></i>
                    </span>
                    {{else}}
                    <span class="icon-btn" id="toggle-transaction-btn">
                        <i class="fa-regular fa-eye"></i>
                    </span>
                    {{/if}}
                </div>
                <table id="toggle-transaction" class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Date</th>
                            <th scope="col">Type</th>
                            <th scope="col">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>2024-02-28</td>
                            <td>Transfer</td>
                            <td>$50.00</td>
                        </tr>
                        <tr>
                            <td>2024-02-27</td>
                            <td>Deposit</td>
                            <td>$100.00</td>
                        </tr>
                        <tr>
                            <td>2024-02-27</td>
                            <td>Deposit</td>
                            <td>$100.00</td>
                        </tr>
                        <tr>
                            <td>2024-02-27</td>
                            <td>Deposit</td>
                            <td>$1400.00</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="chart">
            <div class="d-flex justify-content-between mb-3">
                <h2>Assets</h2>
                {{#if showIcon}}
                <span class="icon-btn" id="toggle-assets-btn">
                    <i class="fa-regular fa-eye-slash"></i>
                </span>
                {{else}}
                <span class="icon-btn" id="toggle-assets-btn">
                    <i class="fa-regular fa-eye"></i>
                </span>
                {{/if}}
            </div>
            <div id="toggle-assets" class="chart-img">
                <img class="pie-chart" src="../img/chart.svg" alt="chart">
            </div>
        </div>

    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.icon-btn').click(function () {
            $(this).find('i').toggleClass('fa-eye fa-eye-slash');
        });
    });

    $("#toggle-transaction").show();
    $("#toggle-transaction-btn").click(function () {
        $("#toggle-transaction").toggle();
    });

    $("#toggle-assets").show();
    $("#toggle-assets-btn").click(function () {
        $("#toggle-assets").toggle();
    });

</script>
